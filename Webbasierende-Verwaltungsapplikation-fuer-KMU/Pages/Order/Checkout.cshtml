@page "{guid}"
@model Webbasierende_Verwaltungsapplikation_fuer_KMU.Pages.Order.PayModel
@{
}
@Html.AntiForgeryToken()

<div class="container">

    <div class="animated fadeIn">
        <div class="col container">
            <div class="container">
                <table class="table table-responsive-sm table-hover table-outline mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th>Ticket Name</th>
                            <th>Betrag gesamt in €</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderSummary.listOfTickets)
                        {
                            <tr>
                                <td>@item.ticket.Name</td>
                                <td>@item.ticketTotal€</td>
                            </tr>
                        }
                        <tr>
                            <td><u><b>Total:</b></u></td>
                            <td><u><b>@Model.OrderSummary.orderTotal€</b></u></td>
                        </tr>
                    </tbody>
                </table>
                <script src="https://www.paypal.com/sdk/js?client-id=Af4UUFyGBjzuPCjUklZBN4ZNmHcrUTIsU8dWZyPOLXrD1fBhOSsNSy4BqxcS_62X0X8Psj13U3OLFUlQ"></script>
                <script>
                    fetch(getHandlerUrl('OrderDetails'))
                        .then(response => response.json())
                        .then(orderData => {
                            paypal.Buttons({
                                createOrder: function (data, actions) {
                                    return actions.order.create({
                                        purchase_units: [{
                                            amount: {
                                                value: orderData.total
                                            }
                                        }]
                                    });
                                },
                                onApprove: function (data, actions) {
                                    return actions.order.capture().then(function (details) {
                                        sendJsonData(getHandlerUrl('Completed'), details)
                                            .then(data => { window.location.href = '/Index' })
                                            .catch(error => { console.log('ERROR') })
                                    });
                                }
                            }).render('body');
                        });
                </script>
            </div>
        </div>
    </div>
</div>

