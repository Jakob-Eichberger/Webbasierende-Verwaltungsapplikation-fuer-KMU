@page "{guid}"
@model Webbasierende_Verwaltungsapplikation_fuer_KMU.Pages.Order.EditModel
@{
}
<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="container">
                    <form method="post">
                        <input type="hidden" asp-for="OrderDto.DeliveryAddressId" />
                        <div class="input-group  ">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <strong style="font-weight:400">Titel:</strong>
                                </span>
                            </div>
                            <div class="input-group  ">
                                <input asp-for="OrderDto.Name" class="form-control" type="text" placeholder="Titel" value="@Model.OrderDto.Name">
                            </div>
                        </div>
                        <span class="text-danger small" asp-validation-for="OrderDto.Name"></span>
                        <br />
                        <br />
                        <div class="input-group  ">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <strong style="font-weight:400">Beschreibung:</strong>
                                </span>
                            </div>
                            <div class="h-50 w-100">
                                <textarea asp-for="OrderDto.Description" class=" form-control" style=" min-height:45% ; max-width:100%" type="text" placeholder="Beschreibung">@Model.OrderDto.Description</textarea>
                            </div>
                            <span class="text-danger" asp-validation-for="OrderDto.Description"></span>
                        </div>
                        <br />
                        <div class="input-group  ">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <strong style="font-weight:400">Notizen:</strong>
                                </span>
                            </div>
                        </div>
                        <textarea asp-for="OrderDto.Note" class="form-control col-md-12" placeholder="Interne Notiz">@Model.OrderDto.Note</textarea>
                        <span class="text-danger small" asp-validation-for="OrderDto.Note"></span>
                        <br />
                        <br />
                        <div class="input-group  ">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <strong style="font-weight:400">Rechnungsadresse:</strong>
                                </span>
                            </div>
                        </div>
                        <div>
                            <select class="custom-select" asp-for="OrderDto.BillingAddressId"
                                    asp-items="@Model.BillingAddress">
                            </select>
                            <span class="text-danger small" asp-validation-for="OrderDto.BillingAddressId"></span>
                        </div>
                        <br />
                        <br />
                        <a asp-page="/Order/Index" asp-route-guid="@Model._guid">
                            <input type="button" class="btn btn-danger btn-primary" value="Abbrechen" />
                        </a>
                        <button class="btn btn-primary" type="submit">Speichern</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>