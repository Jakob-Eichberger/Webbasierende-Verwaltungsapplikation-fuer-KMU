@page
@model Webbasierende_Verwaltungsapplikation_fuer_KMU.Pages.LoginModel
@{
    if (!Model._authService.IsEmployee)
    {
        ViewData["Title"] = "Login";
        //Layout = "_LayoutFullScreen";
    }
    else
    {
        ViewData["Title"] = "Neuer Kunde";
    }
}

<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card-group">
                    @if (!Model._authService.IsEmployee)
                    {
                        <div class="card p-4">
                            <form method="post">
                                <div class="card-body">
                                    <h1>Login</h1>
                                    <p class="text-muted">Melden Sie sich bei Ihrem Account an</p>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="icon-user"></i>
                                            </span>
                                        </div>
                                        <input class="form-control" type="text" placeholder="E-Mail Addresse" asp-for="Email">
                                    </div>
                                    <div class="input-group mb-4">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="icon-lock"></i>
                                            </span>
                                        </div>
                                        <input class="form-control" type="password" placeholder="Passwort" asp-for="Password">
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <button class="btn btn-primary px-4" type="submit">Login</button>
                                        </div>
                                        <div class="col-6 text-right">
                                            <a href="/Password/Reset">
                                                <input type="button" class="btn btn-link px-0" value="Passwort vergessen?" />
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                            {
                                <p class="text-danger">@Model.ErrorMessage</p>
                            }
                            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                            {
                                <p class="table-success">@Model.SuccessMessage</p>
                            }
                        </div>
                    }
                    <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                        <div class="card-body text-center">
                            <div>
                                @if (!Model._authService.IsEmployee)
                                {
                                    <h2>Sign up</h2>
                                    <p>Haben Sie noch keinen Account?</p>
                                    <a class="btn btn-primary active mt-3" href="/Register/Company" type="button">Als Unternehmen registrieren</a>
                                    <a class="btn btn-primary active mt-3" type="button" href="/Register/Customer"> Als Privatperson registrieren</a>
                                }
                                @if (Model._authService.IsEmployee)
                                {
                                    <h2>Kunden Account erstellen</h2>
                                    <a class="btn btn-primary active mt-3" href="/Register/Company" type="button">Ein Unternehmen registrieren</a>
                                    <a class="btn btn-primary active mt-3" type="button" href="/Register/Customer"> Eine Privatperson registrieren</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
