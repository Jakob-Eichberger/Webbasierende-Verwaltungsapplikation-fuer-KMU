@page "{guid}"
@model Webbasierende_Verwaltungsapplikation_fuer_KMU.Pages.Employee.ProfileModel
@{
}
<div class="container">
    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">@Model.ErrorMessage</div>
    }

    @if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
    {
        <div class="alert alert-success" role="alert">@Model.SuccessMessage</div>
    }
    <div class="col-md-12">
        <div class="input-group mb-3 ">
            <div class="input-group-append">
                <span class="input-group-text">
                    <strong style="font-weight:400">Fullname:</strong>
                </span>

            </div>

            <div class="input-group  ">
                <label class="form-control text-center font-weight-bold">@Model?.Employee?.Fullname</label>
            </div>
        </div>
        <div class="input-group mb-3 ">
            <div class=" input-group-append">
                <span class="input-group-text">
                    Email:
                </span>

            </div>
            <div class="input-group">
                <label class="form-control text-center font-weight-bold">@Model?.Employee?.EMail</label>
            </div>
        </div>
        @if ((Model?.UserIsOwner ?? false) || (Model?._authService?.IsAdmin ?? false))
        {
            <div class="input-group mb-3 ">
                <div class=" input-group-append">
                    <span class="input-group-text">
                        Login Email:
                    </span>

                </div>
                <div class="input-group">
                    <label class="form-control text-center font-weight-bold">@Model?.Employee?.User?.LoginEMail</label>
                </div>
            </div>
        }
        <hr class="mt-3 mb-3" />
        <div>
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#Tickets" role="tab">Tickets</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " data-toggle="tab" href="#Adressen" role="tab">Adressen</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#Telefonnummer" role="tab">Telefonnummer</a>
                </li>
                <li>
                    <a class="nav-link" data-toggle="tab" href="#ProfileBearbeiten" role="tab">Profile bearbeiten</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane " id="Adressen" role="tabpanel">
                    <table class="table table-responsive-sm table-hover table-outline mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>PrimärAdresse</th>
                                <th>Land</th>
                                <th>Bundesland</th>
                                <th>ZipCode</th>
                                <th>City</th>
                                <th>Street</th>
                                <th>StairCase</th>
                                <th>HouseNumber</th>
                                <th>DoorNumber</th>
                                <th>Bearbeiten</th>
                                <th>Löschen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model?.Employee?.Address ?? new List<Webbasierende_Verwaltungsapplikation_fuer_KMU.Model.Address>())
                            {
                                <tr>
                                    <td>
                                        @if (item.IsPrimary)
                                        {
                                            <h3>X</h3>
                                        }
                                    </td>
                                    <td>@item.Country</td>
                                    <td>@item.State</td>
                                    <td>@item.ZipCode</td>
                                    <td>@item.City</td>
                                    <td>@item.Street</td>
                                    <td>@item.StairCase</td>
                                    <td>@item.HouseNumber</td>
                                    <td>@item.DoorNumber</td>
                                    <td><a class="btn btn-warning icon-note" asp-page="/User/Address/Edit" asp-route-guid="@item.Guid"></a></td>
                                    <td>
                                        <button class="btn btn-danger icon-trash" type="button" data-toggle="modal" data-target="#@string.Concat("Delete", item.Guid)"></button>
                                        <div class="modal fade" id="@string.Concat("Delete", item.Guid)" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title">Adresse Löschen?</h4>
                                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">×</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Sind Sie sicher dass Sie die Adresse '@item.ZipCode  @item.City  @(item.Street ?? "")  @item.HouseNumber' löschen möchten!</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <form method="post" asp-page-handler="DeleteAddress" asp-route-addressGuid="@item.Guid" asp-route-guid="@Model?.Employee?.Guid">
                                                            <button class="btn btn-secondary" type="button" data-dismiss="modal">Abbrechen</button>
                                                            <button class="btn btn-danger" type="submit">Adresse Löschen</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-page="/User/Address/Add" asp-route-guid="@Model?.Employee?.Guid">
                        <input type="button" class="btn btn-primary mt-3" value="Adresse hinzufügen" />
                    </a>
                </div>
                <div class="tab-pane" id="Telefonnummer" role="tabpanel">
                    <table class="table table-responsive-sm table-hover table-outline mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>Type</th>
                                <th>Nummer</th>
                                <th>Löschen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model?.Employee?.PhoneNumbers ?? new List<Webbasierende_Verwaltungsapplikation_fuer_KMU.Model.PhoneNumber>())
                            {
                                <tr>
                                    <td>@item.Type</td>
                                    <td>@item.Number</td>
                                    <td>
                                        <button class="btn btn-danger icon-trash" type="button" data-toggle="modal" data-target="#@string.Concat("Delete", item.Guid)"></button>
                                        <div class="modal fade" id="@string.Concat("Delete", item.Guid)" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title">Fonnummer Löschen?</h4>
                                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">×</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Sind Sie sicher dass Sie die Nummer '@item.Number' löschen möchten!</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <form method="post" asp-page-handler="DeletePhoneNumber" asp-route-phoneGuid="@item.Guid" asp-route-guid="@Model?.Employee?.Guid">
                                                            <button class="btn btn-secondary" type="button" data-dismiss="modal">Abbrechen</button>
                                                            <button class="btn btn-danger" type="submit">Fonnummer Löschen</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-page="/User/PhoneNumber/Add" asp-route-guid="@Model?.Employee?.Guid">
                        <input type="button" class="btn btn-primary mt-3" value="Telefonnummer hinzufügen" />
                    </a>
                </div>
                <div class="tab-pane active" id="Tickets" role="tabpanel">
                    <table class="table table-responsive-sm table-hover table-outline mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>Namen</th>
                                <th>Priority</th>
                                <th>Status</th>
                                <th>Last Updated</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model!.Tickets!)
                            {
                                string priority = "";
                                switch (item.Priority)
                                {
                                    case Webbasierende_Verwaltungsapplikation_fuer_KMU.Model.Priority.Highest:
                                        priority = "badge badge-danger";
                                        break;
                                    case Webbasierende_Verwaltungsapplikation_fuer_KMU.Model.Priority.High:
                                        priority = "badge badge-warning";
                                        break;
                                    case Webbasierende_Verwaltungsapplikation_fuer_KMU.Model.Priority.Medium:
                                        priority = "badge badge-success";
                                        break;
                                    case Webbasierende_Verwaltungsapplikation_fuer_KMU.Model.Priority.Low:
                                        priority = "badge badge-secondary";
                                        break;
                                    case Webbasierende_Verwaltungsapplikation_fuer_KMU.Model.Priority.Lowest:
                                        priority = "badge badge-secondary";
                                        break;
                                };
                                <tr>
                                    <td><a asp-page="/Ticket/Index" asp-route-guid="@item.Guid"> @item.Name</a></td>
                                    <td><div class="@priority">@item.Priority</div></td>
                                    <td>@item.Status.Name</td>
                                    <td>@item.LastUpdated</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane " id="ProfileBearbeiten" role="tabpanel">
                    <div id="accordion" role="tablist">
                        @if (Model?._authService?.IsEmployee ?? false)
                        {
                            <div class="card">
                                <div class="card-header" id="headingOne" role="tab">
                                    <h5 class="mb-0">
                                        <a class="collapsed" data-toggle="collapse" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">Profile Daten ändern</a>
                                    </h5>
                                </div>
                                <div class="collapse show" id="collapseThree" role="tabpanel" aria-labelledby="headingThree" data-parent="#accordion">
                                    <div class="card-body">
                                        <form method="post" asp-page-handler="EditProfile" asp-route-guid="@Model?.Employee?.Guid">
                                            <label class="input-group-text">Vorname: </label><input type="text" class="form-control" asp-for="PersonDto.FirstName" />
                                            <br />
                                            <label class="input-group-text">Nachname: </label><input type="text" class="form-control" asp-for="PersonDto.LastName" />
                                            <br />
                                            <label class="input-group-text">Geburtstag: </label><input class="form-control" type="date" asp-for="PersonDto.GebDate" />
                                            <br />
                                            <label class="input-group-text">Geschlecht: </label>
                                            <select asp-for="PersonDto.Gender" asp-items="Model.Genders" class="custom-select" style="max-width:30%;">
                                            </select>
                                            <br />
                                            <br />
                                            <input class="btn btn-primary" type="submit" value="Änderungen speichern" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (Model?._authService?.IsAdmin ?? false)
                        {
                            <div class="card">
                                <div class="card-header" id="headingTwo" role="tab">
                                    <h5 class="mb-0">
                                        <a data-toggle="collapse" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">Login E-Mail ändern</a>
                                    </h5>
                                </div>
                                <div class="collapse " id="collapseOne" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion">
                                    <div class="card-body">
                                        <form method="post" asp-page-handler="UpdateEmail" asp-route-guid="@Model?.Employee?.Guid">
                                            <span class="input-group-text">
                                                Neue Email:
                                            </span>
                                            <input type="text" class="form-control" asp-for="Email" value="@Model?.Employee?.EMail" />
                                            <br />
                                            <input class="btn btn-primary" type="submit" value="Login Email ändern" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (Model?._authService?.IsAdmin ?? false)
                        {
                            <div class="card">
                                <div class="card-header" id="headingThree" role="tab">
                                    <h5 class="mb-0">
                                        <a class="collapsed" data-toggle="collapse" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">Kommunikations E-Mail ändern</a>
                                    </h5>
                                </div>
                                <div class="collapse" id="collapseThree" role="tabpanel" aria-labelledby="headingThree" data-parent="#accordion">
                                    <div class="card-body">
                                        <form method="post" asp-page-handler="UpdateEmail" asp-route-guid="@Model?.Employee?.Guid">
                                            <span class="input-group-text">
                                                Neue Email:
                                            </span>
                                            <input type="text" class="form-control" asp-for="Email" value="@Model?.Employee?.EMail" />
                                            <br />
                                            <input class="btn btn-primary" type="submit" value="Login Email ändern" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>