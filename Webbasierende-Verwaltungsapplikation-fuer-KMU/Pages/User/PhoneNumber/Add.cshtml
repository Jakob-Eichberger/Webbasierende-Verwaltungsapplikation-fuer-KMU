@page "{guid}"
@model Webbasierende_Verwaltungsapplikation_fuer_KMU.Pages.PhoneNumber.AddModel
@{
}
<div class="container">
    @if (!Model.ModelState.IsValid)
    {
        <span asp-validation-for="PhoneNumber.Number" />
    }
    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">@Model.ErrorMessage</div>
    }
    @if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
    {
        <span class="alert alert-success" role="alert">
            @Model.SuccessMessage
        </span>
    }

    <form class="justify-content-center" method="post">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">
                    <i class="icon-phone"></i>
                </span>
            </div>
            <select class="form-control" asp-for="PhoneNumber.Type" asp-items="Model.PhoneNumberTypes" style="max-width:20%">
            </select>
            <input class="form-control" type="tel" asp-for="PhoneNumber.Number" placeholder="Telefon">
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-success w-75 " type="submit"> Telephonenummmer hinzufügen </button>
        </div>
        <br />
        <br />




    </form>
</div>