@page
@model Webbasierende_Verwaltungsapplikation_fuer_KMU.Pages.User.PasswordResetModel
@{
}
<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card-group">
                    <div class="card p-4">
                        <form method="post" asp-page-handler="ResetPassword">
                            <div class="card-body">
                                <h1>Passworthilfe</h1>
                                <p class="text-muted">Geben Sie die Login E-Mail-Adresse ein, die mit Ihrem Konto verbunden ist.</p>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="icon-user"></i>
                                        </span>
                                    </div>
                                    <input class="form-control" type="text" placeholder="E-Mail Addresse" asp-for="Email">
                                </div>
                                <div class="input-group mb-4">
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <button class="btn btn-primary px-4" type="submit">Senden</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <p class="text-danger">@Model.ErrorMessage</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
