@page "{guid}"
@model Webbasierende_Verwaltungsapplikation_fuer_KMU.Pages.Company.ProfileModel
@{
}
<div class="container">
    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">@Model.ErrorMessage</div>
    }

    @if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
    {
        <div class="alert alert-success" role="alert">@Model.SuccessMessage</div>
    }
    <br />

    <div class="col-md-12">
        <div class="input-group mb-3 ">
            <div class="input-group-append">
                <span class="input-group-text">
                    <strong style="font-weight:400">Firmenname:</strong>
                </span>

            </div>

            <div class="input-group  ">
                <label class="form-control text-center font-weight-bold">@Model?.Company?.CompanyName</label>
            </div>
        </div>

        <div class="input-group mb-3 ">
            <div class=" input-group-append">
                <span class="input-group-text">
                    <strong style="font-weight:400">UID:</strong>
                </span>

            </div>
            <div class="input-group">
                <label class="form-control text-center font-weight-bold">@Model?.Company?.UID</label>
            </div>
        </div>

        <div class="input-group mb-3 ">
            <div class=" input-group-append">
                <span class="input-group-text">
                    <strong style="font-weight:400">Email:</strong>
                </span>

            </div>
            <div class="input-group">
                <label class="form-control text-center font-weight-bold">@Model?.Company?.EMail</label>
            </div>
        </div>

        @if ((Model?.UserIsOwner ?? false) || (Model?._authService?.IsEmployee ?? false))
        {
            <div class="input-group mb-3 ">
                <div class=" input-group-append">
                    <span class="input-group-text">
                        <strong style="font-weight:400">Login Email:</strong>
                    </span>

                </div>
                <div class="input-group">
                    <label class="form-control text-center font-weight-bold">@Model?.Company?.User?.LoginEMail</label>
                </div>
            </div>
        }

        <hr class="mt-3 mb-3" />
        <div>
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#Adressen" role="tab">Adressen</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#Telefonnummer" role="tab">Telefonnummer</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#Auftraege" role="tab">Aufträge</a>
                </li>
                <li>
                    <a class="nav-link" data-toggle="tab" href="#ProfileBearbeiten" role="tab">Profile bearbeiten</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="Adressen" role="tabpanel">
                    <table class="table table-responsive-xl table-hover table-outline mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>PrimärAdresse</th>
                                <th>Land</th>
                                <th>Bundesland</th>
                                <th>ZipCode</th>
                                <th>City</th>
                                <th>Street</th>
                                <th>StairCase</th>
                                <th>HouseNumber</th>
                                <th>DoorNumber</th>
                                <th>Bearbeiten</th>
                                <th>Löschen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model?.Company?.Address!)
                            {
                                <tr>
                                    <td>
                                        @if (item.IsPrimary)
                                        {
                                            <h3>X</h3>
                                        }
                                    </td>
                                    <td>@item.Country</td>
                                    <td>@item.State</td>
                                    <td>@item.ZipCode</td>
                                    <td>@item.City</td>
                                    <td>@item.Street</td>
                                    <td>@item.StairCase</td>
                                    <td>@item.HouseNumber</td>
                                    <td>@item.DoorNumber</td>
                                    <td><a class="btn btn-warning icon-note" asp-page="/User/Address/Edit" asp-route-guid="@item.Guid"></a></td>
                                    <td>
                                        <button class="btn btn-danger icon-trash" type="button" data-toggle="modal" data-target="#@string.Concat("Delete", item.Guid)"></button>
                                        <div class="modal fade" id="@string.Concat("Delete", item.Guid)" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title">Adresse Löschen?</h4>
                                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">×</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Sind Sie sicher dass Sie die Adresse '@item.ZipCode  @item.City  @(item.Street ?? "")  @item.HouseNumber' löschen möchten!</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <form method="post" asp-page-handler="DeleteAddress" asp-route-addressGuid="@item.Guid" asp-route-guid="@Model.Company.Guid">
                                                            <button class="btn btn-secondary" type="button" data-dismiss="modal">Abbrechen</button>
                                                            <button class="btn btn-danger" type="submit">Adresse Löschen</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-page="/User/Address/Add" asp-route-guid="@Model?.Company?.Guid">
                        <input type="button" class="btn btn-primary mt-3" value="Adresse hinzufügen" />
                    </a>
                </div>
                <div class="tab-pane" id="Telefonnummer" role="tabpanel">
                    <table class="table table-responsive-sm table-hover table-outline mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>Type</th>
                                <th>Nummer</th>
                                <th>Löschen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model?.Company?.PhoneNumbers!)
                            {
                                <tr>
                                    <td>@item.Type</td>
                                    <td>@item.Number</td>
                                    <td>
                                        <button class="btn btn-danger icon-trash" type="button" data-toggle="modal" data-target="#@string.Concat("Delete", item.Guid)"></button>
                                        <div class="modal fade" id="@string.Concat("Delete", item.Guid)" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title">Fonnummer Löschen?</h4>
                                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">×</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Sind Sie sicher dass Sie die Nummer '@item.Number' löschen möchten!</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <form method="post" asp-page-handler="DeletePhoneNumber" asp-route-phoneGuid="@item.Guid" asp-route-guid="@Model.Company.Guid">
                                                            <button class="btn btn-secondary" type="button" data-dismiss="modal">Abbrechen</button>
                                                            <button class="btn btn-danger" type="submit">Fonnummer Löschen</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-page="/User/PhoneNumber/Add" asp-route-guid="@Model?.Company.Guid">
                        <input type="button" class="btn btn-primary mt-3" value="Telefonnummer hinzufügen" />
                    </a>
                </div>
                <div class="tab-pane" id="Auftraege" role="tabpanel">
                    <table class="table table-responsive-sm table-hover table-outline mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>Auftragsnummer</th>
                                <th>Name</th>
                                <th>Letzte Änderung</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model?.Company?.Orders!)
                            {
                                <tr>
                                    <td><a asp-page="/Order/Index" asp-route-guid="@item.Guid">@item.Id</a></td>
                                    <td><a asp-page="/Order/Index" asp-route-guid="@item.Guid">@item.Name</a></td>
                                    <td>@item.LastUpdated</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model._authService?.IsEmployee ?? false)
                    {
                        <a asp-page="/Order/Add" asp-route-guid="@Model.Company.Guid">
                            <input type="button" class="btn btn-primary mt-3" value="Auftrag hinzufügen" />
                        </a>
                    }
                </div>
                <div class="tab-pane" id="ProfileBearbeiten" role="tabpanel">
                    <div id="accordion" role="tablist">
                        <div class="card">
                            <div class="card-header" id="headingOne" role="tab">
                                <h5 class="mb-0">
                                    <a class="collapsed" data-toggle="collapse" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">Profile Daten ändern</a>
                                </h5>
                            </div>
                            <div class="collapse show" id="collapseOne" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion">
                                <div class="card-body">
                                    <form method="post" asp-page-handler="EditProfile" asp-route-guid="@Model?.Company?.Guid">
                                        <label class="input-group-text">Name: </label><input type="text" class="form-control" asp-for="CompanyDto.CompanyName" />
                                        <br />
                                        <label class="input-group-text">UID: </label><input type="text" class="form-control" asp-for="CompanyDto.UID" />
                                        <br />
                                        <br />
                                        <input class="btn btn-primary" type="submit" value="Änderungen speichern" />
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header" id="headingTwo" role="tab">
                                <h5 class="mb-0">
                                    <a data-toggle="collapse" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">Login E-Mail ändern</a>
                                </h5>
                            </div>
                            <div class="collapse " id="collapseTwo" role="tabpanel" aria-labelledby="headingTwo" data-parent="#accordion">
                                <div class="card-body">
                                    <form method="post" asp-page-handler="UpdateLoginEmail" asp-route-guid="@Model?.Company?.Guid">
                                        <span class="input-group-text">
                                            Neue Email:
                                        </span>
                                        <input type="text" class="form-control" asp-for="LoginEmail" value="@Model?.Company?.User?.LoginEMail" />
                                        <br />
                                        <input class="btn btn-primary" type="submit" value="Login Email ändern" />
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header" id="headingThree" role="tab">
                                <h5 class="mb-0">
                                    <a class="collapsed" data-toggle="collapse" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">Kommunikations E-Mail ändern</a>
                                </h5>
                            </div>
                            <div class="collapse" id="collapseThree" role="tabpanel" aria-labelledby="headingThree" data-parent="#accordion">
                                <div class="card-body">
                                    <form method="post" asp-page-handler="UpdateEmail" asp-route-guid="@Model?.Company?.Guid">
                                        <span class="input-group-text">
                                            Neue Email:
                                        </span>
                                        <input type="text" class="form-control" asp-for="Email" value="@Model?.Company?.EMail" />
                                        <br />
                                        <input class="btn btn-primary" type="submit" value="Login Email ändern" />
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
