@page
@{
    ViewData["Title"] = "Register";
    //Layout = "_LayoutFullScreen";
}
@model Webbasierende_Verwaltungsapplikation_fuer_KMU.Pages.register.KundenregisterModel
<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mx-4">
                    <div class="card-body p-4">
                        <h1>Registrieren</h1>
                        <br />
                        @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
                        {
                        <div class="alert alert-danger" role="alert">@Model.ErrorMessage</div>
                        }

                        @if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
                        {
                        <div class="alert alert-success" role="alert">@Model.SuccessMessage</div>
                        }
                        <form method="post">
                            <div class="input-group mb">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-user"></i>
                                    </span>
                                </div>
                                <input class="form-control" asp-for="PersonDto.FirstName" type="text" placeholder="Vorname">
                                <input class="form-control" asp-for="PersonDto.LastName" type="text" placeholder="Nachname">
                            </div>
                            <span class=" text-danger small" asp-validation-for="PersonDto.FirstName"></span>
                            <span class=" text-danger small" asp-validation-for="PersonDto.LastName"></span>
                            <br />
                            <div class="input-group mb">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <strong style="font-weight:400">Geschlecht</strong>
                                    </span>
                                </div>
                                <select class="custom-select" asp-for="PersonDto.Gender" asp-items="Model.Genders" style="max-width:30%;"></select>
                            </div>
                            <br />
                            <div class="input-group mb">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        @*<i class="icon-event"></i>*@
                                        Geburtsdatum
                                    </span>
                                </div>
                                <input class="form-control" type="date" asp-for="PersonDto.GebDate" value="2000-01-01">
                                <span class=" text-danger small" asp-validation-for="PersonDto.GebDate"></span>
                            </div>
                            <br />
                            <div class="input-group mb">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <strong class="icon-flag font-xl"> Land</strong>
                                    </span>
                                </div>

                                <select class="custom-select" asp-for="AddressDto.Country" asp-items="Model.Countries" style="max-width:40%"></select>
                                <input class="form-control" type="text" style="max-width:150px" asp-for="AddressDto.State" placeholder="Bundesland">

                            </div>
                            <span class=" text-danger small" asp-validation-for="AddressDto.State"></span>
                            <br />
                            <div class="input-group mb">
                                <input class="form-control" type="text" style="max-width:150px" asp-for="AddressDto.City" placeholder="Stadt">
                                <input class="form-control" type="text" style="max-width:150px" asp-for="AddressDto.ZipCode" placeholder="Postleitzahl ">
                                <input class="form-control" type="text" style="max-width:150px" asp-for="AddressDto.Street" placeholder="Straße">
                            </div>
                            <span class=" text-danger small" asp-validation-for="AddressDto.City"></span>
                            <span class=" text-danger small" asp-validation-for="AddressDto.ZipCode"></span>
                            <span class=" text-danger small" asp-validation-for="AddressDto.Street"></span>
                            <br />
                            <div class="input-group mb">
                                <input class="form-control" type="text" style="max-width:150px" asp-for="AddressDto.HouseNumber" placeholder="Hausnummer">
                                <input class="form-control" type="text" style="max-width:150px" asp-for="AddressDto.StairCase" placeholder="Stiege">
                                <input class="form-control" type="text" style="max-width:150px" asp-for="AddressDto.DoorNumber" placeholder="Türnummer">
                            </div>
                            <span class=" text-danger small" asp-validation-for="AddressDto.HouseNumber"></span>
                            <span class=" text-danger small" asp-validation-for="AddressDto.DoorNumber"></span>
                            <br />
                            <div class="input-group mb">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-phone"></i>
                                    </span>
                                </div>
                                <select class="custom-select" asp-for="PhoneNumberDto.Type" asp-items="Model.PhoneNumberTypes" style="max-width:25%">
                                </select>
                                <input class="form-control" type="tel" asp-for="PhoneNumberDto.Number" placeholder="Telefon">
                            </div>
                            <span class=" text-danger small" asp-validation-for="PhoneNumberDto.Number"></span>
                            <br />
                            <div class="input-group mb">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">@@</span>
                                </div>
                                <input class="form-control" type="text" asp-for="CustomerDto.EMail" placeholder="E-Mail">
                            </div>
                            <span class=" text-danger small" asp-validation-for="CustomerDto.EMail"></span>
                            <br />
                            @if (!(Model._authService.IsEmployee || Model._authService.IsAdmin))
                            {
                            <div class="input-group mb">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-lock"></i>
                                    </span>
                                </div>
                                <input class="form-control" type="password" asp-for="PasswordDto.First" placeholder="Passwort">
                            </div>
                            <span class=" text-danger small" asp-validation-for="PasswordDto.First"></span>
                            <br />
                            <div class="input-group mb">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-lock"></i>
                                    </span>
                                </div>
                                <input class="form-control" type="password" asp-for="PasswordDto.Second" placeholder="Passwort wiederholen">
                            </div>
                            <span class=" text-danger small" asp-validation-for="PasswordDto.Second"></span>
                            <br />
                            <br />
                            @if (!Model._authService.IsEmployee)
                                {
                            <div class="input-group mb">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-flag"></i>
                                    </span>
                                </div>
                                <div class="text-body col-5">
                                    Ich akzeptiere die <a target="_blank" asp-page="/AGB/Index">AGBs</a>.
                                </div>
                                <div>
                                    <input class="btn custom-radio" type="checkbox" asp-for="CustomerDto.AcceptedTerms" placeholder="AGBs" required>
                                </div>
                            </div>
                                }
                            }
                            <button class="btn btn-block btn-success" type="submit">Account erstellen</button>
                            <a class="btn btn-block btn-dark" asp-page="/Index"> return Home</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
